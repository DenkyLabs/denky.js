{
  "source": {
    "include": ["src", "package.json", "README.md"],
    "includePattern": ".js$",
    "excludePattern": "(.github/|node_modules/|docs/)"
  },

  "plugins": ["plugins/markdown"],
  "opts": {
    "encoding": "utf8",
    "readme": "./README.md",
    "destination": "./docs/",
    "recurse": true,
    "verbose": true,
    "template": "./node_modules/clean-jsdoc-theme",
    "theme_opts": {
      "title": "peachy.js",
      "theme": "dark",
      "meta": [
        {
          "name": "og:title",
          "content": "peachy.js"
        },
        {
          "name": "description",
          "content": "peachy.js documentation"
        },
        {
          "name": "og:description",
          "content": "peachy.js documentation"
        }
      ],
      "menu": [
        {
          "title": "GitHub",
          "link": "https://github.com/denkylabs/peachy.js",
          "target": "_blank"
        },
        {
          "title": "Support",
          "link": "https://discord.gg/",
          "target": "_blank"
        }
      ]
    }
  }
}
